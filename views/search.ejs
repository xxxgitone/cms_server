<%- include('./layouts/header') %>
<%- include('./layouts/searchBar.ejs') %>

<div class="weui-panel weui-panel_access">
  <div class="weui-panel__hd">课程列表</div>
  <div class="weui-panel__bd">
    <% if (courses.length > 0) {%>
      <% for (var i = 0; i < courses.length; i++) {%>
        <a href="course/<%= courses[i]._id%>" class="weui-media-box weui-media-box_appmsg">
          <div class="weui-media-box__hd">
            <img class="weui-media-box__thumb" src="<%= courses[i].picUrl %>" alt="">
          </div>
          <div class="weui-media-box__bd">
            <h4 class="weui-media-box__title" style="display:flex;justify-content:space-between;">
              <%= courses[i].courseName%>
              <span style="font-size: 14px; color: #666;margin-right: 6px;">
                <%= courses[i].campus%>
              </span>
            </h4>
            <p class="weui-media-box__desc"><%= courses[i].introduction%></p>
            <span style="color: red; font-size: 12px;">
              <% if (Number(courses[i].price) === 0) {%>
                <span>试听</span>
              <%} else {%>
                <span><%= courses[i].price %></span>
                <span style="display: inline-block;width: 80%;text-align: right;">正式</span>
              <% } %>
            </span>
          </div>
        </a>
      <% } %>
    <% } else { %>
      <div>无相关课程</div>
    <% } %>
  </div>
</div>

<%- include('./layouts/footer') %>